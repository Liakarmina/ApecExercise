<%= form_for(@chat, :remote => true) do |f| %>
 
  <div class="field">
    <%= f.label :message %><br />
    <%= f.text_area :message %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.collection_select(:name, User.all, :name, :name ) %>

  </div>
  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>

